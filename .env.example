# CORS
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,https://*.githubpreview.dev,https://*.app.github.dev

# Django Superuser (for initial setup)
DJANGO_SUPERUSER_USERNAME=admin
