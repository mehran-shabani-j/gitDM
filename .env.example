# Django settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database selection
# True uses SQLite (default for development), False uses Postgres
USE_SQLITE=True

# PostgreSQL settings (external database or docker-compose service `db`)
POSTGRES_DB=diabetes
POSTGRES_USER=diabetes
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432

# Redis settings (external Redis or docker-compose service `redis`)
REDIS_URL=redis://your-redis-host:6379/0

# MinIO settings (used in advanced stack; optional in app)
MINIO_ENDPOINT=your-minio-host:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_USE_HTTPS=False
MINIO_MEDIA_BUCKET=media
MINIO_STATIC_BUCKET=static
