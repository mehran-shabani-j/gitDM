# Django settings for GitHub Codespaces
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,*.githubpreview.dev,*.app.github.dev

# Recommended for Django CSRF on forwarded domains
CSRF_TRUSTED_ORIGINS=http://localhost:8000,https://*.githubpreview.dev,https://*.app.github.dev
# GitHub Codespaces
CODESPACES=true

# AI Settings (optional)
OPENAI_API_KEY=
GAPGPT_API_KEY=
AI_MODEL=gpt-4o
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.3
USE_GAPGPT=False

# Django Superuser (for initial setup)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123